<states class="org.oscm.app.vmware.business.statemachine.SnapshotActions">

  <state id="BEGIN" action="createSnapshot">
    <event id="run" state="RUNNING" />
    <event id="fail" state="ERROR" />
  </state>

  <state id="RUNNING" action="inspectTaskResult">
    <event id="success" state="END" />
    <event id="running" state="RUNNING" />
    <event id="queued" state="RUNNING" />
    <event id="error" state="REPEAT_FAILED_STATE" />
  </state>

  <state id="END" action="finish">
    <event id="success" state="SUCCESS" />
  </state>

  <state id="REPEAT_FAILED_STATE" />

  <state id="ERROR" />

  <state id="SUCCESS" />

</states>